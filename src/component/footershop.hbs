<section class='mt-5 mb-5'>
  <div class='row'>
    {{#each footer}}
      <div class='col-2'>
        <ul class='list-group'>
          {{#each this}}
            {{#if @last}}
              <li
                class='list-group-item disabled'
              >{{text}}</li>
            {{else}}
              <li class='list-group-item'><a
                  href='{{link}}'
                >{{text}}</a></li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    {{/each}}
  </div>
</section>