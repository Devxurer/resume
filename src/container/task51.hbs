{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<main class='main'>

  <div class='row'>
    <div>
      <h1 class='mb-5 ms-3'>{{header}}</h1>
    </div>

    {{! Мейн контент }}

    <div class='col-8'>

      {{! contacts_data }}
      <section>
        {{#with contacts_data}}
          <p class='display-5 mb-3'>{{title}}</p>
          {{#each buttons}}
            {{#if isPrimary}}
              <button
                class='btn btn-warning'
              >{{text}}</button>
            {{/if}}
            {{#if isOutline}}
              <button
                class='btn btn-outline-warning'
              >{{text}}</button>
            {{/if}}
          {{/each}}

          {{! Form for contacts_data }}

          <div class='row mt-3'>
            {{#with form}}
              {{#with input}}
                <div class='col-4 ms-2'>
                  <div
                    class='form-label'
                  >{{surname.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{surname.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{surname.caption}}</div>
                </div>
                <div class='col-4 ms-2'>
                  <div
                    class='form-label'
                  >{{name.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{name.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{name.caption}}</div>
                </div>
                <div class='col-4 ms-2 mb-5'>
                  <div
                    class='form-label'
                  >{{phone.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{phone.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{phone.caption}}</div>
                </div>
                <div class='col-4 ms-2 mb-5'>
                  <div
                    class='form-label'
                  >{{email.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{email.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{email.caption}}</div>
                </div>
              {{/with}}
              <hr />
              {{! switch }}
              {{#each switch}}
                <div class='mt-3'>
                  <div class='form-check form-switch'>
                    <label
                      class='form-check-label'
                    >{{text}}</label>
                    {{#if isActive}}
                      <input
                        type='checkbox'
                        class='form-check-input'
                        checked
                      />
                    {{else}}
                      <input
                        type='checkbox'
                        class='form-check-input'
                      />
                    {{/if}}
                  </div>
                </div>
              {{/each}}
            {{/with}}
          </div>

        {{/with}}
      </section>

      <hr />
      {{! dostavka }}
      <section>
        {{#with delivery}}
          <p class='display-5 mb-3'>{{title}}</p>
          {{! dostavka misto }}
          <div class='row'>
            <div class='col-8'>
              <div class='card'>
                <div class='card-body'>
                  {{#each select}}
                    <label
                      class='form-label'
                    >{{label}}</label>
                    <select
                      class='form-select'
                      aria-label='Default select example'
                    >
                      <option
                        selected
                      >{{placeholder}}</option>
                      {{#each options}}
                        <option
                          value='{{value}}'
                        >{{text}}</option>
                      {{/each}}
                    </select>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
          {{! dostavka select  }}
          <div class='mt-5'>
            {{#each delivery_type}}
              <div class='form-check'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='delivery'
                  id='flexRadioDefault1'
                />
                <label
                  class='form-check-label'
                  for='flexRadioDefault1'
                >
                  {{type}}
                </label>
              </div>
            {{/each}}

          </div>

          {{! payment }}
          <div class='mb-5 mt-5'>
            {{#with payment}}
              <p class='display-5 mb-3'>{{title}}</p>
              {{#each list}}
                <div class='form-check'>
                  <input
                    class='form-check-input'
                    type='radio'
                    name='payment'
                    id='flexRadioDefault1'
                  />

                  <label
                    class='form-check-label'
                    for='flexRadioDefault1'
                  >
                    {{type}}
                  </label>
                  <div
                    class='form-text'
                  >{{description}}</div>
                </div>
              {{/each}}
            {{/with}}
          </div>

          <hr />
          {{! contact  }}
          <div class='mb-5 bt-5'>
            {{#with contact}}
              <p class='display-5 mb-5'>{{title}}</p>
              <div class='row'>
                <div class='col-4 ms-2'>
                  <div
                    class='form-label'
                  >{{surname.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{surname.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{surname.caption}}</div>
                </div>
                <div class='col-4 ms-2'>
                  <div
                    class='form-label'
                  >{{name.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{name.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{name.caption}}</div>
                </div>
                <div class='col-4 ms-2'>
                  <div
                    class='form-label'
                  >{{phone.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{phone.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{phone.caption}}</div>
                </div>
                <div class='col-4 ms-2'>
                  <div
                    class='form-label'
                  >{{email.label}}</div>
                  <input
                    class='form-control'
                    placeholder='{{email.placeholder}}'
                  />
                  <div
                    class='form-text'
                  >{{email.caption}}</div>
                </div>
              </div>
            {{/with}}
          </div>

          <hr />

          {{! coment }}
          <div class='mb-t bt-5'>
            {{#with coment}}
              <label class='form-label'>{{label}}</label>
              <input
                class='form-control'
                placeholder='{{placeholder}}'
              />
            {{/with}}</div>

        {{/with}}
      </section>

      <hr />

      {{! coupon }}

      <section>
        {{#with coupon}}
          <p class='display-5'>{{title}}</p>

          {{! наявны купони and friend }}
          <div>
            {{#with select}}
              <div class='mb-3'>{{#with availabel_coupon}}
                  <label class='form-label'>
                    {{label}}
                  </label>
                  <div class='row'>
                    <select class='form-select-lg'><option
                        selected
                      >{{placeholder}}</option>
                      {{#each options}}
                        <option
                          value='{{value}}'
                        >{{text}}</option>
                      {{/each}}</select>
                  </div>
                {{/with}}</div>
              <div class='mb-3'>
                {{#with friend_coupon}}
                  <label class='form-label-sm'>
                    {{label}}
                  </label>
                  <div class='row'>
                    <select class='form-select-sm'><option
                        selected
                      >{{placeholder}}</option>
                      {{#each options}}
                        <option
                          value='{{value}}'
                        >{{text}}</option>
                      {{/each}}</select>
                  </div>
                {{/with}}
              </div>
            {{/with}}
          </div>

          {{! add friend  }}
          <div class='mb-3'>
            {{#with add}}
              <div class='mb-3'>
                {{#with friend}}
                  <label class='form-label'>
                    {{label}}
                  </label>
                  <div class='row'>
                    <input
                      class='form-control form-control-lg'
                      placeholder='{{placeholder}}'
                    />
                    <div class='form-text'>{{caption}}</div>
                  </div>
                {{/with}}
              </div>
              <div class='mb-3'>
                {{#with colleague}}
                  <label class='form-label'>
                    {{label}}
                  </label>
                  <div class='row'>
                    <input
                      class='form-control form-control-sm'
                      placeholder='{{placeholder}}'
                    />
                    <div class='form-text'>{{caption}}</div>
                  </div>
                {{/with}}
              </div>
            {{/with}}
          </div>

        {{/with}}
      </section>

      {{! quiz }}

      <div class='mb-5'>
        {{#with quiz}}
          <p class='display-5 mb-5'>{{title}}</p>
          {{#with preference}}
            <label class='form-label'>{{title}}</label>
            {{#each options}}
              <div class='form-check'>
                <input
                  class='form-check-input'
                  type='radio'
                  name='flexRadioDefault'
                  id='flexRadioDefault1'
                />
                <label
                  class='form-check-label'
                  for='flexRadioDefault1'
                >
                  {{this}}
                </label>
              </div>
            {{/each}}
          {{/with}}

          <div class='mb-5'>
            <div class='mt-3'>
              {{#with your_expirience}}
                <label class='form-label'>
                  {{label}}
                </label>
                <input class='form-control' />
              {{/with}}
            </div>
          </div>

          <div class='mb-5 mt-3'>
            {{#with purchase_frequency}}
              <label class='form-label'>{{label}}</label>
              <select class='form-select'>
                <option placeholer>
                  {{placeholder}}
                </option>
                {{#each options}}
                  <option
                    value='{{value}}'
                  >{{text}}</option>
                {{/each}}
              </select>
            {{/with}}
          </div>

          <div class='mb-5 mt-3'>
            {{#with factors}}
              <label class='form-label'>{{title}}</label>
              {{#each options}}
                <div class='form-check'>

                  <input
                    class='form-check-input'
                    type='checkbox'
                    value=''
                    id='flexCheckDefault'
                  />

                  <label
                    class='form-check-label'
                    for='flexCheckDefault'
                  >
                    {{this}}
                  </label>

                </div>
              {{/each}}
            {{/with}}
          </div>
        {{/with}}
      </div>

      <hr />
    </div>

    <div class='col-4'>
      <section class='sidebar'>

        {{! action_block }}

        <div class='card mb-3'>
          <div class='card-body'>
            {{#each action_block}}
              {{#if isSuccess}}
                <div class='row mb-3'>
                  <div class='col-3'>
                    <button
                      class='btn btn-success'
                    >{{text}}</button>
                  </div>
                </div>
              {{/if}}
              {{#if isDanger}}
                <div class='row mb-3'>
                  <div class='col-3'>
                    <button
                      class='btn btn-danger'
                    >{{text}}</button>
                  </div>
                </div>
              {{/if}}
              {{#if isInfo}}
                <div class='row mb-3'>
                  <div class='col-3'>
                    <button
                      class='btn btn-info'
                    >{{text}}</button>
                  </div>
                </div>
              {{/if}}
            {{/each}}
          </div>
        </div>

        {{! item list, additional, total price, button }}

        <div class='card'>
          <div class='card-body'>
            {{#with total}}
              <p class='display-5'>{{title}}</p>
              <ul class='list-group'>
                {{#each item_list}}
                  <li class='list-item'>
                    {{name}}:
                    {{price}}
                  </li>
                {{/each}}
              </ul>

              <hr />

              <ul class='list-group'>
                {{#each additional_info}}
                  <li class='list-item'>
                    {{text}}:
                    {{value}}
                  </li>
                {{/each}}
              </ul>

              <hr />

              <div class=''>
                {{#with total_price}}
                  {{text}}:
                  {{value}}
                {{/with}}
              </div>

              <hr />

              <div>
                {{#each button}}
                  {{#if isPrimary}}
                    <button
                      class='btn btn-primary'
                    >{{text}}</button>
                  {{/if}}
                  {{#if isOutline}}
                    <button
                      class='btn btn-outline-primary mt-2'
                    >{{text}}</button>
                  {{/if}}
                {{/each}}
              </div>

            {{/with}}
          </div>
        </div>
      </section>
    </div>

  </div>
</main>

