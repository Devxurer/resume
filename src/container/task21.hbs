{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div>
  <main>
    {{#with heading}}
      <section class='card card-body'>
        {{#with main}}<div class='card card-body'>
            <h1>{{title}}
              <span class='badge bg-secondary'></span></h1>
            <br />
            <blockquote
              class='text-muted'
            >{{text}}</blockquote>
            <br />
            {{#with button_text}}
              <button
                type='button'
                class='btn btn-primary'
              >{{solid}}</button>
              <br />
              <br />
              <button
                type='button'
                class='btn btn-outline-primary'
              >{{outline}}</button>
            {{/with}}
          </div>
        {{/with}}
        <br />
        <br />
        <div>
          {{#with second}}
            <div class='card card-body'>
              <h2>{{title}}</h2>
              <br />
              <blockquote
                class='text-muted'
              >{{text}}</blockquote>
              <br />
              {{#with button_text}}
                <button
                  type='button'
                  class='btn btn-primary'
                >{{solid}}</button>
                <br />
                <br />
                <button
                  type='button'
                  class='btn btn-outline-primary'
                >{{outline}}</button>
              {{/with}}
            </div>
          {{/with}}
        </div>
        <br />
        <div>
          {{#with subblock}}
            <div class='card card-body'>
              <h2>{{title}}</h2>
              <br />
              <blockquote
                class='text-muted'
              >{{text}}</blockquote>
              <br />
              {{#with button_text}}
                <button
                  type='button'
                  class='btn btn-primary'
                >{{solid}}</button>
                <br />
                <br />
                <button
                  type='button'
                  class='btn btn-outline-primary'
                >{{outline}}</button>
              {{/with}}
            </div>
          {{/with}}
        </div>
      </section>
    {{/with}}
  </main>
  <section>
    {{#with nested_display}}
      <div class='card card-body'><p
          class='display-1'
        >{{title}}</p>
        {{#with children_display}}
          <div class='card card-body'>
            <p class='display-4'>{{title}}</p>
            <br />
            <blockquote
              class='text-muted'
            >{{text}}</blockquote>
            <br />
            {{#with button}}<button
                type='button'
                class='btn btn-outline-warning'
              >{{text}}</button>
            {{/with}}
          </div>
          <br />
        {{/with}}
        <div>
          <p class='display-6'>{{header_text}}</p>
          <br />
          <button
            type='button'
            class='btn btn-primary'
          >{{button.text}}</button>
        </div>
      </div>
      <br />
      <br />
    {{/with}}
    <div class='card card-body'>
      {{#with paragraph}}
        <p class='display-6'>{{title}}</p>
        <br />
        <p class='display-8'>{{text}}</p>
        <br />
        <a
          class='btn btn-secondary'
          role='button'
          aria-disabled='true'
          href='{{button.url}}'
        >{{button.text}}</a>
        <br />
        <div class='card card-body'>
          <ul>
            {{#each list_name}}
              <li><a
                  class='btn btn-secondary'
                  role='button'
                  aria-disabled='true'
                  href='{{url}}'
                >{{text}}</a></li>
            {{/each}}
          </ul>
        </div>
      {{/with}}</div>
  </section>
</div>
{{!--
Цей код містить лише те, що буде виводитись в {{{body}}} в layout/default.hbs
Адже наш layout/default.hbs має вже структуру HTML
--}}