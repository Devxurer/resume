{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div>
  {{#with page_header}}<head>
      <h1 class='text-center'>{{title}}</h1>
      <br />
      <p class='text-center'>{{description}}</p>
      <br />
    </head>

  {{/with}}
  {{! ==================================================== }}

  {{#with section}}<main>
      {{#with about_us}}
        <div class='card card-body'>
          <p
            class='display-6 text-end'
          >{{title_list.main}}</p>
          <br />
          <mark
            class='display-2 text-end'
          >{{title_list.sub}}</mark>
          <br />
          <button
            class='btn btn-info'
          >{{button.text}}</button>
        </div>
      {{/with}}

      <br />

      {{#with advantage}}<div class='card card-body'>
          <p class='display-5'>{{title}}</p>
          <br />
          {{#with efficiency}}<div class='card card-body'>
              <p class='display-4'>{{title}}</p>
              <br />
              <h6>{{sub_title}}</h6>
              <br />
              <mark>{{description}}</mark>
              <br />
              <button class='btn btn-outline-warning'>
                {{button}}
              </button>
            </div>
            <br />
          {{/with}}

          {{#with innovation}}<div class='card card-body'>
              <p class='display-4 text-center'>{{title}}</p>
              <br />
              <h6 class='text-center'>{{sub_title}}</h6>
              <br />
              <mark>{{description}}</mark>
              <br />
              <button class='btn btn-outline-warning'>
                {{button}}
              </button>
            </div>
            <br />
          {{/with}}

          {{#with collaboration}}<div
              class='card card-body'
            >
              <p class='display-4 text-end'>{{title}}</p>
              <br />
              <h6 class='text-end'>{{sub_title}}</h6>
              <br />
              <mark>{{description}}</mark>
              <br />
              <button class='btn btn-outline-warning'>
                {{button}}
              </button>
            </div>
            <br />
          {{/with}}

        </div>{{/with}}

    </main>

    {{! ====================================================== }}

    <footer>
      {{#with agreement}}
        <div class='card card-body'>
          <p class='display-5'>{{title}}</p>
          <br />
          <div class='card card-body'>
            {{#with info}}
              <h5>{{sub_title}}</h5>
              <br />
              <div class='card card-body'>
                {{#with detail}}
                  <mark>{{text}}</mark>
                  <br />
                  <button class='btn btn-success'>
                    {{button}}
                  </button>
                {{/with}}
              </div>
            {{/with}}
          </div>
        </div>
      {{/with}}
    </footer>
  {{/with}}

</div>
