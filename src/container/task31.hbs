{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div>
  <head>
    {{#with navigation}}
      <div class='container text-start'>
        <div class='row row-col-12'>
          {{#each links}}
            <div class='col g-3'>
              <a class='' href='{{href}}'>{{text}}</a>
            </div>
          {{/each}}</div>
        {{#with button}}
          <a href='{{href}}' class='btn btn-primary'>
            {{text}}
          </a>
        {{/with}}
      </div>
    {{/with}}
  </head>
  <br />
  <hr />
  <br />
  <main>
    <div>
      {{#with header}}
        <h1 class='text-start'>
          {{title}}
        </h1>
        <br />
        <mark class='text-start'>{{description}}</mark>
        <br />
        <br />
        {{#with button}}
          <a
            type='btn'
            class='btn btn-primary text-start'
            href='{{link}}'
          >{{text}}</a>
        {{/with}}
      {{/with}}
    </div>
    <br />
    <hr />
    <br />
    <section>
      {{#with city}}
        <h2 class='text-start'>{{title}}</h2>
        <br />

        <div class='row gx-3 gy-4'>
          {{#each cards}}
            <div class='col-5'>
              <div class='card'>
                {{#with picture}}<img
                    class='card-img-top'
                    src='{{src}}'
                    alt='{{alt}}'
                  />
                {{/with}}
                <div class='card-body'>
                  <h5 class='card-title'>{{title}}</h5>
                  <p class='text-muted'>{{description}}</p>
                  {{#with button}}
                    <a
                      href='{{href}}'
                      class='btn btn-primary'
                    >{{text}}</a>
                  {{/with}}
                </div>
              </div>
            </div>
          {{/each}}</div>
      {{/with}}
    </section>
    <br />
    <hr />
    <br />
    <section>
      {{#with winner}}
        <h2>{{title}}</h2>
        <br />
        <table class='table table-striped table-bordered'>
          {{#with table}}
            <thead>
              <tr>
                {{#each head}}
                  <th scope='col'>{{this}}</th>
                {{/each}}
              </tr>

            </thead>
            <tbody>
              {{#each user}}
                <tr>
                  <th scope='row'>{{place}}</th>
                  <td>{{name}}</td>
                  <td>{{surname}}</td>
                  <td>{{nickname}}</td>
                </tr>
              {{/each}}

            </tbody>
          {{/with}}
        </table>
      {{/with}}
    </section>
    <br />
    <hr />
    <br />
    <section class='row gx-2 gy-2'>
      {{#with gallery}}
        <h2>{{title}}</h2>
        {{#each cards}}
          <div class='col-4'>
            <ul class='list-group'>
              <li
                class='list-group-item active'
                aria-current='true'
              >{{name}}</li>
              {{#each items}}<li
                  class='list-group-item'
                >{{this}}</li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      {{/with}}</section>
    <br />
    <hr />
    <br />
    <section>
      {{#with relaxion}}
        <p class='display-3'>{{title}}</p>
        <br />
        <div class='row gy-4 gx-2'>{{#each cards}}
            <div class='col-5'>
              <div class='card text-bg-secondary'>
                <div class='card-header'>
                  {{header}}
                </div>
                <div class='card-body'>
                  <h5 class='card-title'>{{title}}</h5>
                  <p class='card-text'>{{description}}</p>
                </div>

              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </section>
    <br />
    <hr />
    <br />
    <section>
      {{#with rest}}
        <div class='row gy-2'>
          {{#each cards}}
            <div class='col-6'>
              <div class='card text-center'>
                <div class='card-header'>
                  {{header}}
                </div>
                <div class='card-body'>
                  <h5 class='card-title'>{{title}}</h5>
                  <p class='card-text'>{{description}}</p>
                  <a
                    href='#'
                    class='btn btn-primary'
                  >{{button}}</a>
                </div>
                <div
                  class='card-footer text-body-secondary'
                >
                  {{footer}}
                </div>
              </div>
            </div>
          {{/each}}</div>
      {{/with}}</section>
    <br />
    <hr />
    <br />
    <section>
      {{#with proposition}}
        <p class='display-2'>{{title}}</p>
        <div class='row gy-4 gx-2'>
          {{#each card}}
            <div class='col-5'>
              <div class='card text-bg-warning'>
                <div class='card-header'>
                  {{header}}
                </div>
                <div class='card-body'>
                  <h5 class='card-title'>{{title}}</h5>
                  <p class='card-text'>{{description}}</p>
                </div>
              </div>
            </div>
          {{/each}}</div>
      {{/with}}</section>
    <br />
    <hr />
    <br />
  </main>
  <footer>
    <footer>
      <h3>{{footer.title}}</h3>
      <div class='row'>
        <div class='col-3'>
          <ul class='list-group'>
            {{#each footer.navigation}}<li
                class='list-group-item'
              ><a href='{{href}}'>{{text}}</a></li>
            {{/each}}
          </ul>
        </div>
        <div class='col-3'>
          <ul class='list-group'>
            {{#each footer.socialMedia}}<li
                class='list-group-item'
              ><a
                  class='btn btn-outline-dark'
                  href='{{link}}'
                >{{name}}</a></li>
            {{/each}}
          </ul>
        </div>
        <div class='col-3'>
          <ul class='list-group'>
            {{#each footer.partners}}<li
                class='list-group-item'
              ><a
                  class='btn btn-outline-info'
                  href='{{link}}'
                >{{name}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>
    </footer>
  </footer>
</div>
