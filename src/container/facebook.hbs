{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}
<div>
  <main>
    <h1>{{name}} <span class='badge bg-warning'></span></h1>
    <hr />
    {{#each users}}
      <h3>({{id}}), {{name}}, {{gender}}, {{age}}</h3>
      <br />
      <h2><span
          class='badge text-bg-info'
        >Friends:</span></h2>
      <ul>
        {{#each friends}}
          <li>({{id}}), {{name}}, {{gender}}, {{age}}</li>
          <h4><span class='badge text-bg-info'>Mutal
              friends:</span></h4>
          <ul>
            {{#each mutual_friends}}
              <li>({{id}}),
                {{name}},
                {{gender}},
                {{age}}</li>
              {{#if mutual_friends}}
                <h5><span class='badge text-bg-info'>Mutal
                    friends:</span></h5>
                <ul>
                  {{#each mutual_friends}}
                    <li>({{id}}),
                      {{name}},
                      {{gender}},
                      {{age}}</li>
                  {{/each}}
                </ul>
              {{/if}}
            {{/each}}
          </ul>
          <br />
          {{#if groups}}
            <h4><span
                class='badge text-bg-info'
              >Groups:</span></h4>
            <ul>
              {{#each groups}}
                <li>id: {{id}}</li>
                <li>name: {{name}}</li>
                <li>{{description}}</li>
                <li>
                  <h5><span
                      class='badge text-bg-info'
                    >Members:</span></h5>
                  <ul>
                    {{#each members}}
                      <li>({{id}}),
                        {{name}},
                        {{gender}},
                        {{age}}</li>
                    {{/each}}
                  </ul>
                </li>
                <br />
              {{/each}}
            </ul>
            <br />
          {{/if}}
        {{/each}}
      </ul>
      {{#if groups}}
        <h2><span
            class='badge text-bg-info'
          >Groups:</span></h2>
        <ul>
          {{#each groups}}
            <li>id: {{id}}</li>
            <li>name: {{name}}</li>
            <li>{{description}}</li>
            <li>
              <h4><span
                  class='badge text-bg-info'
                >Members:</span></h4>
              <ul>
                {{#each members}}
                  <li>({{id}}),
                    {{name}},
                    {{gender}},
                    {{age}}</li>
                {{/each}}
              </ul>
            </li>
            <br />
          {{/each}}
        </ul>
      {{/if}}
      <hr />
    {{/each}}
  </main>
</div>
